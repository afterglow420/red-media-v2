{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src", // Ensure baseUrl is correctly set to src
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["components/layouts/*"],
      "@ui/*": ["components/ui/*"],
      "@hocs/*": ["hocs/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@hofs/*": ["hofs/*"],
      "@page-init/*": ["page-init/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
